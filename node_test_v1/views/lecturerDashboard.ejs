<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lecturer Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen">

  <div class="max-w-4xl mx-auto py-10 px-6">
    <h1 class="text-4xl font-bold text-center mb-8 bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-transparent">
      Lecturer Dashboard
    </h1>

    <% if (error) { %>
      <div class="mb-6 p-3 bg-red-500/20 border border-red-400 text-red-300 rounded-lg">
        <%= error %>
      </div>
    <% } %>

    <!-- Course List -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4">Your Courses</h2>
      <% if (courses.length === 0) { %>
        <p class="text-gray-400">You are not part of any courses yet.</p>
      <% } else { %>
        <div class="grid gap-4">
          <% courses.forEach(course => { %>
            <div class="bg-gray-800 border border-gray-700 rounded-lg p-4 flex justify-between items-center">
              <span class="font-semibold"><%= course.course_code %></span>
              <a href="course/<%= course.course_id %>"
                 class="px-4 py-2 bg-cyan-600 hover:bg-cyan-500 rounded-lg font-medium">
                Enter
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <!-- Create Course -->
    <section class="bg-gray-800 border border-gray-700 rounded-lg p-6">
      <h2 class="text-2xl font-semibold mb-4">Create New Course</h2>
      <form action="/lecturer/create-course" method="POST" class="space-y-4">
        <input type="text" name="course_code" placeholder="Course Code" required
          class="w-full p-3 rounded-lg bg-gray-900 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-cyan-400">
        <input type="password" name="password" placeholder="Password" required
          class="w-full p-3 rounded-lg bg-gray-900 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-cyan-400">
        <button type="submit"
          class="w-full py-3 bg-gradient-to-r from-cyan-500 to-purple-500 rounded-lg font-semibold hover:from-cyan-400 hover:to-purple-400 transition">
          Create Course
        </button>
      </form>
    </section>
  </div>
</body>
</html>

