<script src='https://cdn.tailwindcss.com'></script>
<script>
function openForm(module = null) {
  document.getElementById("moduleForm").classList.remove("hidden");
  if (module) {
    document.getElementById("formTitle").innerText = "Edit Module";
    document.getElementById("module_id").value = module.module_id;
    document.getElementById("start_time").value = module.start_time;
    document.getElementById("module_title").value = module.module_title;
    document.getElementById("module_description").value = module.module_description;
    document.getElementById("type").value = module.type;
  } else {
    document.getElementById("crudForm").reset();
    document.getElementById("formTitle").innerText = "Add Module";
  }
}
function closeForm() {
  document.getElementById("moduleForm").classList.add("hidden");
}

document.getElementById("crudForm").addEventListener("submit", async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  const id = formData.get("module_id");

  const method = id ? "PUT" : "POST";
  const url = id ? `/api/module/${id}` : "/api/module";

  await fetch(url, { method, body: formData });
  location.reload();
});

function editModule(module) {
  openForm(module);
}

async function deleteModule(id, courseId) {
  if (confirm("Delete this module?")) {
    await fetch(`/api/module/${id}`, { method: "DELETE" });
    location.reload();
  }
}
</script>


